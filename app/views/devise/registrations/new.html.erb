  
<div class="card border-secondary mb-3" style="max-width: 28rem; margin-left: 400px; margin-top: 30px">
  <div class="card-header"><h2>Criar Novo Usu√°rio</h2></div>
  <div class="card-body text-secondary">

        <%= form_for(resource, as: resource_name, url: registration_path(resource_name), autocomplete:"off") do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

        <div class="field">
          <%= f.label :email %><br />
          <%= f.email_field :email, autofocus: true %>
        </div>

        <div class="field">
          <%= f.label :password %>
          <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> characters minimum)</em>
          <% end %><br />
          <%= f.password_field :password%>
        </div>

        <div class="field">
          <%= f.label :password_confirmation %><br />
          <%= f.password_field :password_confirmation %>
        </div>

        <div class="actions">
          <%= f.submit "Sign up" %>
        </div>
      <% end %>
          <%= render "devise/shared/links" %>
  </div>
</div>
