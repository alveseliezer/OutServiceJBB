<div class="container" style="margin-left:10px">
<p id="notice"><%= notice %></p>

<% if current_user.email == "adm@adm.com" %>
<h4>Busca</h4>

 <%= form_tag list_geral_path, :method=> 'get' do %>
    <%= text_field_tag :search, params[:search] %>
    <%= submit_tag "Busca"%>
<% end %>

<br><br>

<table class="table">
  <thead>
    <tr>
       <th>Prestador</th>
      <th>Tipo_Serviço</th>
      <th>Saída</th>
      <th>Retorno</th>      
      <th>Peso_Saída</th>
      <th>Peso_Retorno</th>
      <th>Qtd</th>
      <th>Qtd.Produzir</th>
  <% if current_user.email == "adm@adm.com" %>
      <th>Val.Unit.Serv.</th>      
      <th>Total_Serviço</th>
   <% end %>
      <th>Ref.Peça</th>
      <th>Solicitante</th>
      <th>Status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @geral.each do |servico| %>
      <tr>
        <td><%= servico.prestador %></td>
        <td><%= servico.tipoServico %></td>
        <td><%= servico.saida.strftime("%d/%m/%Y")  %></td>
        <td><%= servico.retorno.strftime("%d/%m/%Y")  %></td>       
        <td><%= servico.peso_saida %></td>
        <td><%= servico.peso_retorno %></td>
        <td><%= servico.qtd %></td>
        <td><%= servico.qtdAproduzir %></td>        
    <% if current_user.email == "adm@adm.com" %>
        <td><%= servico.valorUnitarioServico %></td>
        <td><%= servico.totalServico %></td>
    <% end %>
        <td><%= servico.ref_peca %></td>
        <td><%= servico.solicitante %></td>
        <td><%= servico.status %></td>           
        <td><%= link_to 'Ver', servico, :class=>'btn btn-outline-success'  %></td>
        <% if current_user.email == "adm@adm.com" %>
          <td><%= link_to 'Editar', edit_servico_path(servico), :class=>'btn btn-outline-warning'  %></td>
          <td><%= link_to 'Destroy', servico, method: :delete, data: { confirm: 'Are you sure?' }, :class=>'btn btn-outline-danger'  %></td>
        <% end %>  
      </tr>
    <% end %>
  </tbody>
</table>
<br>
<h4>Total: <%= @total_servico %></h4>
</div>
<% end %>
 <% if current_user.email != "adm@adm.com" %>
  <h3> Você não tem permissão para acessar essa área </h3>
<% end %>